---
interface Props { title: string; outcome: string; }
const { title, outcome } = Astro.props;
---
<article class="glass rounded-xl p-5">
  <h3 class="font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-slate-300">{outcome}</p>
  <a href="/case-studies/" class="focus-ring mt-4 inline-block text-sm text-cyan">Read case study</a>
</article>
