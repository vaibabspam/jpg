---
import { navLinks, site } from '../data/site';
---
<header class="sticky top-0 z-50">
  <div class="container-shell py-3">
    <div class="glass mx-auto flex max-w-5xl items-center justify-between rounded-full px-5 py-3 shadow-glow transition">
      <a href="/" class="focus-ring text-sm font-semibold tracking-[0.2em] text-cyan">{site.name.toUpperCase()}</a>
      <nav aria-label="Primary" class="hidden gap-5 md:flex">
        {navLinks.map((link) => (
          <a href={link.href} class="focus-ring text-sm text-slate-200 transition hover:text-cyan">{link.label}</a>
        ))}
      </nav>
      <a href="/contact/" class="focus-ring rounded-full bg-cyan px-4 py-2 text-xs font-semibold text-ink">Book a consult</a>
    </div>
  </div>
</header>
