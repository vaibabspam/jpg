---
import { servicePages } from '../data/site';
---
<section class="container-shell py-12" id="services">
  <div class="mb-6 flex items-end justify-between gap-4">
    <h2 class="text-2xl font-semibold">Core Services</h2>
    <a href="/services/" class="text-sm text-accent">View all services</a>
  </div>
  <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3">
    {servicePages.map((service) => (
      <article class="group rounded-2xl border border-line bg-panel p-6 transition hover:-translate-y-1 hover:border-brand/70 hover:shadow-glow">
        <h3 class="text-lg font-semibold">{service.title}</h3>
        <p class="mt-3 text-slate-300">{service.description}</p>
        <a href={service.href} class="mt-6 inline-flex text-sm font-semibold text-accent">Learn more â†’</a>
      </article>
    ))}
  </div>
</section>
